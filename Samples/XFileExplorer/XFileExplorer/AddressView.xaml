<UserControl x:Class="Microsoft.Samples.XFileExplorer.AddressView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="25"
    Loaded="OnLoaded">
    <Grid Height="25">
        <ComboBox Margin="0,0,75,0" Name="AddressBox" AllowDrop="False" IsEditable="True" IsDropDownOpen="False" SelectionChanged="Address_SelectionChanged" />
        <Button HorizontalAlignment="Right" Margin="0,0,0,0" Name="Enter" Width="75" IsDefault="True" Click="Enter_Click">Enter</Button>
    </Grid>
</UserControl>
