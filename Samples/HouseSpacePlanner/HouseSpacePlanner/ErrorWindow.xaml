<UserControl x:Class="HouseSpacePlanner.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    FontFamily="Trebuchet MS" FontSize="11">
  <ListBox x:Name="listBox">
    <ListBox.ItemTemplate>
      <DataTemplate>
        <Border Margin="2" BorderBrush="Red" BorderThickness="1">
          <StackPanel>
            <TextBox TextWrapping="Wrap" Text="{Binding Description}"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Exception}"/>
          </StackPanel>
        </Border>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>
